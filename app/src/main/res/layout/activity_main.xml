<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MyBackGroudActivity"
    android:orientation="vertical"
    android:padding="@dimen/border_padding"
    tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/playlist_maker"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            style="@style/ButtonActivity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:id="@+id/buttonContainer"
            android:text="@string/search"
            app:icon="@drawable/ic_lupa" />

        <Button
            style="@style/ButtonActivity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:id="@+id/buttonContainer2"
            android:text="@string/media_library"
            app:icon="@drawable/ic_nota" />

        <Button
            style="@style/ButtonActivity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:id="@+id/buttonContainer3"
            android:text="@string/settings"
            app:icon="@drawable/ic_settings"/>

    </LinearLayout>

</LinearLayout>
