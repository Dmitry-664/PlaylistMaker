<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/MyBackGroudSettings"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/buttonBack"
            style="@style/ButtonSettings"
            android:background="@android:color/transparent"
            android:layout_width="@dimen/button_w"
            android:layout_height="@dimen/button_h"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            app:icon="@drawable/ic_back"
            app:iconGravity="textStart"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/settings"
            android:fontFamily="@font/ys_display_medium"
            android:layout_marginEnd="@dimen/end_margin"
            android:textFontWeight="500"
            android:padding="6dp"
            android:textAppearance="@style/style_2"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewSettings"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="38dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/dark_theme"
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchButton"
                style="@style/SwitchButtonSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="6dp"
                android:contentDescription="@android:string/no"
                android:checked="false" />
        </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <TextView
                style="@style/TextViewSettings"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="38dp"
                android:text="@string/share_the_app" />

            <Button
                android:id="@+id/buttonShare"
                style="@style/ButtonSettings"
                app:icon="@drawable/ic_share"
                app:iconTint="@color/gray"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewSettings"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="38dp"
                android:text="@string/write_to_support" />

            <Button
                android:id="@+id/writeToSupport"
                style="@style/ButtonSettings"
                app:icon="@drawable/ic_support"
                app:iconTint="@color/gray"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextViewSettings"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="38dp"
                android:text="@string/user_agreement"/>

            <Button
                android:id="@+id/user_agreement"
                style="@style/ButtonSettings"
                app:icon="@drawable/ic_arrow"
                app:iconTint="@color/gray"/>

        </FrameLayout>
</LinearLayout>